<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleDarkGreenHeader">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="styleHeader2">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="styleDescription1">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="styleDescription2">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleSettingsFragmentItem">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/settings_item_background</item>
    </style>

    <style name="styleGreenHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="styleAlarmListButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/alarm_list_button_background</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="styleSolvePuzzleButton" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/solve_puzzle_button_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>